# Overview:
#  1. Run hierarchy check
#  2. Run soft connection check
#  3. Run full lvs
#  4. Run cvc for digital designs
#
#  All variable specified in LVS configuration file

# Usage
# run_be_checks LVS_config_file [top_netlist [top_layout [layout_file]]] 		: extract, then check
# run_be_checks --noextract LVS_config_file [top_netlist [top_layout [layout_file]]]	: use previous extraction results to compare

if [[ $1 = "--noextract" ]]; then
	export EXTRACT_LAYOUT=no
	shift
else
	export EXTRACT_LAYOUT=yes
fi

if [[ $# -lt 1 || $# -gt 4 ]]; then
	echo "usage: run_be_checks [--noextract] lvs_config_file [netlist_top [layout_top [layout_file]]]"
	exit 1
fi

# Check for LVS_ROOT
if [[ -z "$LVS_ROOT" ]]; then
	echo "LVS_ROOT not set."
	exit 1
fi

CONFIG_FILE=$1
TOP_SOURCE=$2
TOP_LAYOUT=${3:-$TOP_SOURCE}
if [[ $# -ge 4 ]]; then
	LAYOUT_FILE=$4
fi

if [[ ! -f $CONFIG_FILE ]]; then
	echo "Could not find LVS configuration file $CONFIG_FILE"
	exit 1
fi

#get_lvs_config $CONFIG_FILE |
source $CONFIG_FILE

echo "TOP SOURCE: $TOP_SOURCE"
echo "SOURCE FILE(S): $(echo $LVS_SPICE_FILES $LVS_VERILOG_FILES | sed -e 's/#[^ ]*//g' -e 's/ /\n/g')"
echo "TOP LAYOUT: $TOP_LAYOUT"
echo "LAYOUT FILE: $LAYOUT_FILE"

: "${WORK_ROOT:=$(pwd)/$TOP_SOURCE}"
: "${LOG_ROOT:=$WORK_ROOT}"
: "${SIGNOFF_ROOT:=$WORK_ROOT}"
export LOG_ROOT SIGNOFF_ROOT WORK_ROOT

mkdir -p $LOG_ROOT $SIGNOFF_ROOT $WORK_ROOT

start_time=$SECONDS

if [[ $LAYOUT_FILE ]]; then
	$LVS_ROOT/run_hier_check $TOP_SOURCE "$(echo $LVS_VERILOG_FILES | sed 's/#[^ ]*//g')" $TOP_LAYOUT $LAYOUT_FILE
	hier_status=$?
fi

if [[ $EXTRACT_LAYOUT = yes ]]; then
	$LVS_ROOT/run_scheck $CONFIG_FILE $TOP_LAYOUT $LAYOUT_FILE
	scheck_status=$?
else
	$LVS_ROOT/run_scheck --noextract $CONFIG_FILE $TOP_LAYOUT $LAYOUT_FILE
	scheck_status=$?
fi

$LVS_ROOT/run_full_lvs --noextract $CONFIG_FILE $TOP_SOURCE $TOP_LAYOUT
lvs_status=$?

if [[ -f $LVS_ROOT/cvc/$TOP_SOURCE.$PDK.power || -f ${CONFIG_FILE%/*}/$TOP_SOURCE.power ]]; then
	if [[ -f ${CONFIG_FILE%/*}/$TOP_SOURCE.power ]]; then
		cp ${CONFIG_FILE%/*}/$TOP_SOURCE.power $WORK_ROOT/$TOP_LAYOUT.power
	fi
	$LVS_ROOT/run_cvc $TOP_LAYOUT
	cvc_status=$?
fi

echo "
Soft check result:"
tail -n 20 $LOG_ROOT/soft.log | awk '/Final result/,/Logging/' | grep -v ^Logging
if [[ $scheck_status -ne 0 ]]; then
	echo "Soft check problem: check the following files
$LOG_ROOT/ext.log
$LOG_ROOT/nowell.ext.log
$LOG_ROOT/soft.log
$SIGNOFF_ROOT/lvs.soft.report"
fi

echo "
LVS result:"
tail -n 20 $LOG_ROOT/lvs.log | awk '/Final result/,/^END/' | grep -v ^Logging | grep -v "^END"
if [[ $lvs_status -ne 0 ]]; then
	echo "LVS problem: check the following files
$LOG_ROOT/ext.log
$LOG_ROOT/lvs.log
$SIGNOFF_ROOT/lvs.report"
fi

if [[ -f $LOG_ROOT/cvc.log ]]; then
	echo "
CVC result:"
	grep 'CVC: Total:' $LOG_ROOT/cvc.log
fi

runtime=$((SECONDS - start_time))
hours=$((runtime / 3600))
minutes=$(((runtime % 3600) / 60))
seconds=$(((runtime % 3600) % 60))
printf "\nRuntime: %d:%02d:%02d (hh:mm:ss)\n" $hours $minutes $seconds

# If any of the checks had an error, set return code.
# NOTE: ignores hierarchy check errors
# NOTE: cvc_status ignored if not run
if [[ $scheck_status -eq 0 && $lvs_status -eq 0 && ${cvc_status:=0} -eq 0 ]]; then
	echo "
No errors detected"
	exit 0

else
	echo "
WARNING: possible errors SOFT $scheck_status LVS $lvs_status CVC $cvc_status"
	exit 1
fi
